{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Hello World API",
    "description": "A simple API for demonstrating the use of Swagger UI"
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "paths": {
    "/hello": {
      "get": {
        "description": "Returns a greeting message",
        "produces": [
          "text/plain"
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "type": "string"
            },
            "examples": {
              "text/plain": "Hello, World!"
            }
          }
        }
      }
    }
  }
}
